@model OnlineSchool_Project.Models.ChuongHoc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Chương học/</span> Chỉnh sửa</h4>

<!-- Basic Layout & Basic with Icons -->
<div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Chương học</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit"> 
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="@Model.Id">Tên chương:</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-building"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="@Model.Id"
                                       placeholder="@Model.TenChuongHoc" asp-for="@Model.TenChuongHoc" />
                            </div>
                        </div>
                    </div> 
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="@Model.Id">Mô tả:</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-building"></i>
                                </span>
                                <textarea class="form-control" id="@Model.Id" placeholder="@Model.MoTa" asp-for="@Model.MoTa"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-date">Khóa học:</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-date" class="input-group-text">
                                    <i class='bx bx-building'></i>
                                </span>
                                <select class="form-control" asp-for="@Model.idKhoaHoc" required>
                                    @foreach (var khoaHoc in ViewBag.KhoahocList)
                                    {
                                        <option value="@khoaHoc.Id">@khoaHoc.TenKhoaHoc</option>
                                    }
                                </select>
                            </div>
                            @Html.ValidationMessageFor(model => model.idKhoaHoc)
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                            <a asp-action="Index">Trở về trang trước</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->