@model IEnumerable<OnlineSchool_Project.Models.User.KhoaHocViewModel>

@{
	ViewData["Title"] = "Khoahoc";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Home -->

<div class="home">
	<div class="breadcrumbs_container">
		<div class="container">
			<div class="row">
				<div class="col">
					<ul class="breadcrumbs_list d-flex flex-row align-items-center justify-content-start">
						<li><a href="/">trang chủ</a></li>
						<li><a href="/User/Khoahoc">khóa học</a></li> 
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Language -->

<div class="language">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="language_title">DANH SÁCH KHÓA HỌC</div>
			</div>
		</div> 
	</div>
</div>

<!-- Courses -->

<div class="courses">
	<div class="container">
		<div class="row courses_row">
			@foreach (var item in Model)
			{
				<!-- Course -->
				<div class="col-lg-4 course_col">
					<div class="course">
						<div class="course_image"><img src="~/images/khoahoc/@item.KhoaHocs.UrlImage" href="@Url.Action("Chitietkhoahoc", "User", new { idKhoaHoc = item.KhoaHocs.Id })" alt=""></div>
						<div class="course_body">
							<div class="course_title"><a href="@Url.Action("Chitietkhoahoc", "User", new { idKhoaHoc = item.KhoaHocs.Id })">@item.KhoaHocs.TenKhoaHoc</a></div>
							<div class="course_text">
								<p>@item.KhoaHocs.MoTa</p>
							</div>
						</div>
						<div class="course_footer d-flex flex-row align-items-center justify-content-start">
					@* 		<div class="course_students"><i class="fa fa-user" aria-hidden="true"></i><span>10</span></div>
							<div class="course_rating ml-auto"><i class="fa fa-star" aria-hidden="true"></i><span>4,5</span></div>
							<div class="course_mark trans_200"><a href="#">$45</a></div> *@
						</div>
					</div>
				</div>
			}

		</div>

		<div class="row">
			<div class="col">
				<div class="load_more_button"><a href="#">load more</a></div>
			</div>
		</div>
	</div>
</div>
