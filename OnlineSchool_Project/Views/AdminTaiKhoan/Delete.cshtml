@model OnlineSchool_Project.Models.TaiKhoan

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
 
<h3>Có chắc muốn xóa?</h3>
<div>
    <h4>Tên đăng nhập: @Model.TenDangNhap</h4>
    <h4>Mật khẩu: @Model.MatKhau</h4>
    <h4>Loại tài khoản: @Model.LoaiTaiKhoan</h4> 
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="TenDangNhap" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index">Trở lại trang trước</a>
</form>