@model OnlineSchool_Project.Models.GiangVien
@{
    ViewData["Title"] = "Quản lý Giảng viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Có chắc muốn xóa?</h3>

<div>
    <h4 class="mt-10">Thông tin giảng viên: @Model.HoTen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã giảng viên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Tên giảng viên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            Ngày sinh:
        </dt>
        <dd class="col-sm-10">
            @Model.NgaySinh.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
           Giới Tính:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class="col-sm-2">
            Số CCCD:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CCCD)
        </dd>
        <dt class="col-sm-2">
           Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            Bằng cấp:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BangCap)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            Ảnh đại diện:
        </dt>
        <dd class="col-sm-10">
            <img width="200" height="200" src="~/images/giangvien/@Model.UrlImage" alt="" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn xóa thông tin giảng viên?')" /> |
        <a class="btn btn-primary" asp-action="Index">Trờ về trang trước</a>
    </form>
</div>