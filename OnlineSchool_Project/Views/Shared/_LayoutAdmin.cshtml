									</div>
								</a>
								<ul class="dropdown-menu dropdown-menu-end"> 
									@if (!string.IsNullOrEmpty(tenDangNhap))
									{
										<li>
											<a class="dropdown-item" href="#">
												<div class="d-flex">
													<div class="flex-shrink-0 me-3">
														<div class="avatar avatar-online">
															<img src="https://gweb-research-imagen.web.app/compositional/An%20oil%20painting%20of%20a%20British%20Shorthair%20cat%20wearing%20a%20cowboy%20hat%20and%20red%20shirt%20skateboarding%20on%20a%20beach./1_.jpeg" alt class="w-px-40 h-auto rounded-circle" />
