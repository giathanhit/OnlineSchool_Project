@model OnlineSchool_Project.Models.DanhGiaKhoaHoc

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Đánh giá khóa học</h1>
 
<div class="row">
	<!-- Basic Layout -->
	<div class="col-xxl">
		<div class="card mb-4">
			<div class="card-header d-flex align-items-center justify-content-between">
				<h5 class="mb-0">Khóa học</h5>
			</div>
			<div class="card-body">
				<form asp-action="Create">
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-date">Ngành học:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-date" class="input-group-text">
									<i class='bx bx-building'></i>
								</span>
								
							</div>
							@Html.ValidationMessageFor(model => model.idKhoaHoc)
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">Điểm khóa học:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-fullname2" class="input-group-text">
									<i class="bx bx-book"></i>
								</span>
								<input type="number"
									   class="form-control"
									   id="basic-default-book"
									   required
									   placeholder="Nhập điếm đánh giá khóa học.." asp-for="@Model.DiemDanhGia" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">Tên khóa học:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-fullname2" class="input-group-text">
									<i class="bx bx-book"></i>
								</span>
								<input type="text"
									   class="form-control"
									   id="basic-default-book"
									   required
									   placeholder="Nhập Chi tiết đánh giá khóa học.." asp-for="@Model.ChiTietDanhGia" />
							</div>
						</div>
					</div>
					<div class="row justify-content-end">
						<div class="col-sm-10">
							<button type="submit" class="btn btn-primary">Lưu</button>
							<a asp-action="Index">Trở về trang trước</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div> 