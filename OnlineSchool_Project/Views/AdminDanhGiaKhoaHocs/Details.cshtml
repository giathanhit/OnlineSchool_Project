@model OnlineSchool_Project.Models.DanhGiaKhoaHoc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Thông tin Đánh giá khóa học</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Mã khóa học
        </dt>
        <dd class="col-sm-10" >
            @Html.DisplayFor(model => model.idKhoaHoc)
        </dd>
        <dt class="col-sm-2">
            Mã học viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.idHocVien)
        </dd>
        <dt class="col-sm-2">
           Điểm đánh giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiemDanhGia)
        </dd>
        <dt class="col-sm-2">
           Nội dung đánh giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChiTietDanhGia)
        </dd>
    </dl>

    <form>
        <a asp-action="Index" class="btn btn-primary" >Trờ về trang trước</a>
    </form>
</div>

