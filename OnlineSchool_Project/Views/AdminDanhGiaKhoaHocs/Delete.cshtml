@model OnlineSchool_Project.Models.DanhGiaKhoaHoc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>Xóa đánh giá</h1>

<div>
    <h4 class="mt-10">Thông tin đánh giá khóa học</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Mã khóa học
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idKhoaHoc)
        </dd>
        <dt class = "col-sm-2">
           Mã học viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idHocVien)
        </dd>
        <dt class = "col-sm-2">
            Điểm số đánh giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiemDanhGia)
        </dd>
        <dt class = "col-sm-2">
            Nội dung:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChiTietDanhGia)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn xóa đánh giá khóa học ?')" /> |
        <a class="btn btn-primary" asp-action="Index">Trờ về trang trước</a>
    </form>
</div>
