@model OnlineSchool_Project.Models.KhoaHoc
@{
    ViewData["Title"] = "Quản lý Khóa học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Có chắc muốn xóa?</h3>

<div>
    <h4 class="mt-10">Thông tin khóa học: @Model.TenKhoaHoc</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã khóa học:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Tên khóa học:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenKhoaHoc)
        </dd> 
        <dt class="col-sm-2">
            Mô tả:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
			Ảnh:
        </dt>
        <dd class="col-sm-10">
            <img width="200" height="200" src="~/images/khoahoc/@Model.UrlImage" alt="" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn xóa thông tin khóa học?')" /> |
        <a class="btn btn-primary" asp-action="Index">Trờ về trang trước</a>
    </form>
</div>