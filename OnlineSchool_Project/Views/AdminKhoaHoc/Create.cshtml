@model OnlineSchool_Project.Models.KhoaHoc

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Khóa học/</span> Thêm mới</h4>

<!-- Basic Layout & Basic with Icons -->
<div class="row">
	<!-- Basic Layout -->
	<div class="col-xxl">
		<div class="card mb-4">
			<div class="card-header d-flex align-items-center justify-content-between">
				<h5 class="mb-0">Khóa học</h5>
			</div>
			<div class="card-body">
				<form asp-action="Create">
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">Tên khóa học:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-fullname2" class="input-group-text">
									<i class="bx bx-book"></i>
								</span>
								<input type="text"
									   class="form-control"
									   id="basic-default-book"
									   placeholder="Nhập vào tên khóa học.." asp-for="@Model.Ten" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-company">Mô tả:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-fullname2" class="input-group-text">
									<i class="bx bx-chat"></i>
								</span>
								<input type="text"
									   class="form-control"
									   id="basic-default-chat"
									   placeholder="Nhập vào mô tả.." asp-for="@Model.MoTa" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-company">Giá tiền khóa học:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-fullname2" class="input-group-text">
									<i class='bx bx-money'></i>
								</span>
								<input type="number"
									   class="form-control"
									   id="basic-default-user"
									   placeholder="Nhập vào giá tiền.." asp-for="@Model.Gia" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-company">Hình thức:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-fullname2" class="input-group-text">
									<i class='bx bx-category'></i>
								</span>
								<select asp-for="@Model.HinhThuc" class="form-control">
									<option value="Online">Online</option>
									<option value="Trực tuyến">Trực tuyến</option>
								</select>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-email">Ngày bắt đầu học:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-date" class="input-group-text">
									<i class='bx bx-calendar'></i>
								</span>
								<input type="date"
									   class="form-control"
									   id="basic-default-user"
									   asp-for="@Model.NgayHoc"
									   value="@DateTime.Now.ToString("yyyy-MM-dd")" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-email">Ngày kết thúc:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-date" class="input-group-text">
									<i class='bx bx-calendar'></i>
								</span>
								<input type="date"
									   class="form-control"
									   id="basic-default-user"
									   asp-for="@Model.NgayKetThuc"
									   value="@DateTime.Now.ToString("yyyy-MM-dd")" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-phone">Số lượng:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-phone2" class="input-group-text">
									<i class="bx bx-phone"></i>
								</span>
								<input type="number"
									   class="form-control"
									   id="basic-default-user"
									   placeholder="Nhập vào số lượng học viên.." asp-for="@Model.SoLuong" />
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-date">Trạng thái:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-date" class="input-group-text">
									<i class='bx bx-category'></i>
								</span>
								<select asp-for="@Model.TrangThai" class="form-control"> 
									<option value="Sắp mở">Sắp mở</option>
									<option value="Đang mở">Đang mở</option>
									<option value="Đã kết thúc">Đã kết thúc</option>
								</select>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label" for="basic-default-date">Giảng viên:</label>
						<div class="col-sm-10">
							<div class="input-group input-group-merge">
								<span id="basic-icon-default-date" class="input-group-text">
									<i class='bx bx-user'></i>
								</span>
								<select class="form-control" id="GiangVienId" name="GiangVienId" required>
									@foreach (var giangVien in ViewBag.GiangVienList)
									{
										<option value="@giangVien.Id">@giangVien.HoTen</option>
									}
								</select>
							</div>
						</div>
					</div>
					<div class="row justify-content-end">
						<div class="col-sm-10">
							<button type="submit" class="btn btn-primary">Lưu</button>
							<a asp-action="Index">Trở về trang trước</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div> 